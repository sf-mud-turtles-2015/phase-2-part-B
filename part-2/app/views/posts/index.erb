<section id="sidebar" class="sidebar right">
  <a href="/posts/new" id= "new_post_link" class="button_anchor">Share Your Thoughts</a>

  <form id="post_form" action="/posts" method="post">
    <label for="post[title]">Title:</label><br>
    <input type="text" name="post[title]" value="title"><br>

    <label for="post[author_name]">Author Name:</label><br>
    <input type="text" name="post[author_name]" value="author_name"><br>

    <label for="post[body]">Body:</label><br>
    <textarea name="post[body]">body</textarea><br>

    <input type="submit" name="submit" value="Submit Post"><br>
  </form>

</section>

<section id="posts" class="left content">
  <% @posts.each do |post| %>
    <%= erb :'posts/_post', { layout: false, locals: {:post => post }} %>
  <% end %>
</section>
