<p id="sidebar" class="sidebar right">
  <a href='#' id= "new_post_link" class="button_anchor">Share Your Thoughts</a>
</p>

<article id="post_form" id="sidebar" class="sidebar right">
  <h1>Write Your Post</h1>
  <%= erb :'posts/_form', { layout: false, locals: { post: @post } } %>
</article>

<section id="posts" class="left content">
  <% @posts.each do |post| %>
    <%= erb :'posts/_post', { layout: false, locals: {:post => post }} %>
  <% end %>
</section>
